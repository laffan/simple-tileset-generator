{
  "name": "simple-tileset-generator",
  "version": "1.0.0",
  "description": "A desktop tool for creating tilesets - offline version",
  "main": "main.js",
  "author": "laffan",
  "license": "MIT",
  "homepage": "https://github.com/laffan/simple-tileset-generator",
  "repository": {
    "type": "git",
    "url": "https://github.com/laffan/simple-tileset-generator.git"
  },
  "scripts": {
    "postinstall": "node scripts/copy-two.js",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "two.js": "^0.8.10"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.laffan.simple-tileset-generator",
    "productName": "Simple Tileset Generator",
    "directories": {
      "output": "dist",
      "buildResources": "icons"
    },
    "files": [
      "main.js",
      "package.json",
      {
        "from": "../",
        "to": "app",
        "filter": [
          "index.html",
          "styles.css",
          "styles/**/*",
          "scripts/**/*",
          "swatches/**/*",
          "lib/**/*"
        ]
      }
    ],
    "extraResources": [],
    "asar": true,
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "icons/mac/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "icons/png",
      "category": "Graphics",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
